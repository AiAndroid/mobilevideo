<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.NoActionBar">
    </style>

    <style name="DefaultTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="DefaultTheme">
        <item name="buttonSelectableBackground">@drawable/list_selector_bg</item>
    </style>

    <style name="TabsTheme" parent="AppBaseTheme">
        <item name="buttonSelectableBackground">@drawable/list_selector_bg</item>
    </style>

    
    <style name="TvDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/tranparent_selector</item>
    </style>

    <attr name="ratingStarStyle" format="reference" />
    <declare-styleable name="RatingStar">
        <attr name="ratingStarType">
            <enum name="small" value="0"></enum>
            <enum name="normal" value="1"></enum>
        </attr>
        <attr name="ratingStarScore">
            <enum name="score1" value="2"></enum>
            <enum name="score2" value="4"></enum>
            <enum name="score3" value="6"></enum>
            <enum name="score4" value="8"></enum>
            <enum name="score5" value="10"></enum>
        </attr>
    </declare-styleable>


    <style name="NormalProgressStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDrawable">@drawable/loading_rotate_black</item>
        <item name="android:background">@drawable/transparent</item>
    </style>

    <style name="SmallProgressStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDrawable">@drawable/loading_rotate_black_small</item>
        <item name="android:background">@drawable/loading_bg_black_solid_small</item>
    </style>

    <!-- 字体 -->
    <style name="TextAppearance">
        <item name="android:textColorHighlight">@color/text_color_highlight</item>
        <item name="android:textColorLink">@color/text_color_link</item>
        <item name="android:shadowColor">@color/text_color_shadow</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.Primary"><!-- 需要反色 -->
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_font_size_huge</item>
    </style>

    <style name="SubtitleTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_light_dark</item>
        <item name="android:textSize">@dimen/font_size_36</item>
    </style>

    <style name="TitleTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_deep_dark</item>
        <item name="android:textSize">@dimen/font_size_42</item>
    </style>

    <style name="NameTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/font_size_42</item>
    </style>

    <style name="PlaceTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_sub_text</item>
        <item name="android:textSize">@dimen/font_size_40</item>
    </style>

    <style name="ExtraTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/p_80_white</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>

    <style name="ExtraBigTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/p_80_white</item>
        <item name="android:textSize">@dimen/font_size_40</item>
    </style>

    <style name="ExtraTextViewDarkStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_deep_dark</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>

    <style name="SearchEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/transparent</item>
        <item name="android:textCursorDrawable">@drawable/cursor_light</item>
        <item name="android:textColor">@color/p_80_black</item>
        <item name="android:textColorHint">@color/p_50_black</item>
        <item name="android:textSize">@dimen/font_size_42</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">flagNoExtractUi|actionSearch</item>
    </style>

    <style name="vp_source_item_text_style" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@drawable/vp_source_item_color</item>
    </style>

    <style name="vertical_popup_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/vp_menu_popup_enter_vertical</item>
        <item name="android:windowExitAnimation">@anim/vp_menu_popup_exit_vertical</item>
        <item name="android:popupBackground">@color/option_menu_background</item>
    </style>

</resources>