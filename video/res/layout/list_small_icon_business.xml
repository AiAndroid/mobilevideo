<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_single_item_height"
    android:orientation="horizontal"
	android:paddingLeft="@dimen/size_20"
	android:paddingRight="@dimen/size_20">
  	<ImageView
  	    android:id="@+id/business_icon"
  	    android:layout_width="@dimen/list_single_item_icon_width"
  	    android:layout_height="@dimen/list_single_item_icon_height"
  	    android:layout_gravity="center_vertical"
		android:layout_centerVertical="true"
  	    android:contentDescription="@string/app_name" />
  	<LinearLayout 
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_gravity="center_vertical"
		android:layout_toRightOf="@id/business_icon"
  	    android:paddingLeft="@dimen/list_single_item_text_left_margin"
		android:layout_centerVertical="true"
  	    android:orientation="vertical" >
  	    <TextView
  	        android:id="@+id/business_text"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:textSize="@dimen/font_size_42"
  	        android:textColor="@color/text_color_deep_dark"
  	        android:textIsSelectable="false"/>
  	    <TextView
  	        android:id="@+id/business_desc"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:textSize="@dimen/font_size_36"
  	        android:textColor="@color/color_sub_text"
  	        android:layout_marginTop="@dimen/list_single_item_subtitle_top_margin"
  	        android:textIsSelectable="false"/>
  	</LinearLayout>

	<View
			android:id="@+id/tab_media_click"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/list_selector_bg"/>
</RelativeLayout>