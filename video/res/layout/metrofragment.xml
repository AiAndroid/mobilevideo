<?xml version="1.0" encoding="utf-8"?>
<com.video.ui.view.detail.ObserverScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
            android:id="@+id/header_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

            <com.video.ui.view.MetroLayout
            android:id="@+id/metrolayout"
            android:layout_below="@id/header_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/ITEM_DIVIDE_SIZE"/>
    </RelativeLayout>
</com.video.ui.view.detail.ObserverScrollView>



