<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/list_selector_bg">
<TextView
            android:id="@+id/quick_entry_user"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/first_textview_width"
            android:singleLine="true"
            android:layout_height="@dimen/rank_media_text_height"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/rank_media_text_paddingH"
            android:textColor="@color/text_color_deep_dark"
            android:textSize="@dimen/font_size_42"/>

    <TextView
            android:id="@+id/rank_media_item_actor"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="@dimen/rank_media_text_height"
            android:layout_toRightOf="@id/quick_entry_user"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/rank_media_text_paddingH"
            android:paddingRight="@dimen/rank_media_text_paddingH"
            android:textColor="@color/tab"
            android:textSize="@dimen/font_size_42"/>

</RelativeLayout>
