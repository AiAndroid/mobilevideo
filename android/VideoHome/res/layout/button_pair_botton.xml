<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_180"
    android:background="@drawable/com_bg_white" >

    <TextView
        android:id="@+id/button_left"
        android:layout_width="@dimen/size_475"
        android:layout_height="@dimen/size_100"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_51"
        android:background="@drawable/com_btn_bg"
        android:gravity="center"
        android:text="@android:string/cancel"
        android:textColor="@color/p_80_black"
        android:textSize="@dimen/text_size_36" />

    <TextView
        android:id="@+id/button_right"
        android:layout_width="@dimen/size_475"
        android:layout_height="@dimen/size_100"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_51"
        android:background="@drawable/com_btn_bg_3"
        android:gravity="center"
        android:text="@android:string/cancel"
        android:textColor="@color/com_btn_3_text_color"
        android:textSize="@dimen/text_size_36" />

</RelativeLayout>