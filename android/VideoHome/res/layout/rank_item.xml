<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/rank_banner_width"
        android:layout_height="wrap_content"
        android:background="@drawable/com_bg_white_corner"
        android:orientation="vertical">
        <TextView android:id="@+id/rank_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/font_size_48"
                  android:paddingTop="8dp"
                  android:paddingLeft="8dp"
                  android:textColor="@color/orange"
                  android:text="Movie"/>

        <com.video.ui.view.LinearFrame
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rank_media_item_height"
            android:paddingTop="8dp"
            android:layout_centerHorizontal="true">
        </com.video.ui.view.LinearFrame>

        <com.video.ui.view.LinearFrame
            android:id="@+id/list"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
        </com.video.ui.view.LinearFrame>

        <Button android:id="@+id/enter_button" android:layout_width="match_parent" android:layout_height="48dp"/>
</LinearLayout>