<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.NoActionBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="buttonSelectableBackground">@drawable/list_selector_bg</item>
    </style>

    <style name="TabsTheme" parent="AppBaseTheme">
        <item name="buttonSelectableBackground">@drawable/list_selector_bg</item>
    </style>

    
    <style name="TvDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/tranparent_selector</item>
    </style>

        <!-- 字体 -->
    <style name="TextAppearance">
        <item name="android:textColorHighlight">@color/text_color_highlight</item>
        <item name="android:textColorLink">@color/text_color_link</item>
        <item name="android:shadowColor">@color/text_color_shadow</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.Primary"><!-- 需要反色 -->
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_font_size_huge</item>
    </style>

    <style name="SubtitleTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_light_dark</item>
        <item name="android:textSize">@dimen/font_size_36</item>
    </style>

    <style name="TitleTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_deep_dark</item>
        <item name="android:textSize">@dimen/font_size_42</item>
    </style>

    <style name="NameTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/font_size_42</item>
    </style>

    <style name="PlaceTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_sub_text</item>
        <item name="android:textSize">@dimen/font_size_40</item>
    </style>

    <style name="ExtraTextViewDarkStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_color_deep_dark</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>

</resources>