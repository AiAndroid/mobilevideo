<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TextView
	    android:id="@+id/countdown"
	    android:textSize="@dimen/vp_text_size_xxlarge"
	    android:textColor="@color/vp_white"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/vp_adtimeleft_background"
	    android:layout_gravity="top|right"
	    android:layout_margin="@dimen/vp_countdown_margin"/>

	<Button
	    android:id="@+id/adbtn"
	    android:background="@drawable/vp_adbutton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/vp_white"
	    android:textSize="@dimen/vp_text_size_xxlarge"
	    android:text="@string/ad_moredetail"
	    android:layout_margin="@dimen/vp_ad_padding"
	    android:layout_gravity="bottom|right"/>
	    
